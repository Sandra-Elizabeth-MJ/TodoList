<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/plomoA1"
    android:elevation="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            >

            <RadioButton
                android:id="@+id/rbtn_tarea"
                android:layout_width="35dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTarea_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azulA1"
                android:textSize="20sp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="50dp"
            >

            <ImageView
                android:id="@+id/icnotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notificacion"
                android:contentDescription="@string/hora_y_recordatorio"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvFecha_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azulA1"
                android:textSize="15sp"
                android:hint="@string/mm_dd_aaaa"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/tvHora_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azulA1"
                android:textSize="15sp"
                android:hint="@string/hh_mm_tt"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>